{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RECONION OSINT Recon Schema",
  "description": "Schema for Tor-based OSINT reconnaissance results generated by RECONION",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "Target",
      "Status",
      "Risk_Score"
    ],
    "properties": {
      "Target": {
        "type": "string",
        "description": "Scanned target (onion, website, or API)"
      },
      "Status": {
        "type": "string",
        "enum": ["Active", "Inactive"]
      },
      "HTTP_Code": {
        "type": "integer"
      },
      "Content_Type": {
        "type": "string"
      },
      "Title": {
        "type": "string"
      },
      "Keywords": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "Risk_Score": {
        "type": "string",
        "enum": ["LOW", "MEDIUM", "HIGH"]
      },
      "Screenshot": {
        "type": "string",
        "description": "Screenshot capture status"
      },
      "Error": {
        "type": "string"
      }
    }
  }
}
